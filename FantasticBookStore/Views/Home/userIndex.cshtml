@model IEnumerable<FantasticBookStore.Models.Book>
@{
    ViewBag.Title = "userIndex";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<main>
    <div class="container">
        <div class="jumbotron jumbotron_style">
            <h1>Welcome to Fantastic Book store!</h1>
            <p>
                The best collection of books for passionate readers
            </p>
        </div>
        @foreach (var item in Model)
        {
            <form method="post">
                @*<div class="padding-20"></div>*@
                @*<div class="row text-center">*@
                    <div class="col-md-3 col-sm-6">
                        

                           
                        <div class="thumbnail">
                           
                            @Html.Raw("<img src=/" + "images" + "/" + item.bookId + ".jpg>")
                           
                           @*<div class="caption">*@
                            
                                <h3>@Html.DisplayFor(modelitem => item.bookName)</h3>
                                <p>Rs.@Html.DisplayFor(modelitem => item.price)</p>
                                <input type="hidden" name="bid" value="@Html.DisplayFor(modelItem => item.bookId)" />
                                <input type="hidden" name="bname" value="@Html.DisplayFor(modelItem => item.bookName)" />
                                <input type="hidden" name="aname" value="@Html.DisplayFor(modelItem => item.authorName)" />
                                <input type="hidden" name="price" value="@Html.DisplayFor(modelItem => item.price)" />
                                <input type="hidden" name="category" value="@Html.DisplayFor(modelItem => item.catId)" />
                                <input type="hidden" name="publishYear" value="@Html.DisplayFor(modelItem => item.publishYear)" />


                                <button class="add-to-cart">Add to Cart</button>
                            @*</div>*@
                            
                        </div>
                    </div>
                    
                @*</div>*@
                @*<div class="padding-20"></div>*@
            </form>
        }
    </div>
</main>

